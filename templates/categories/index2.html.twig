{% extends 'base2.html.twig' %}

{% block title %}NoWaste
{% endblock %}

{% block body %}

	<div>
		<!-- Titre du site -->
		<div class="title">
			<img class="NO" src="/logo/nw_nom_sans_fond.svg">
		</div>
		<div class="row">
			<div class="col-md-4">
				{% for article in articles %}
					<div class="card">
						<a href="/article/{{article.id}}">
							<img class="img" src="{{ asset('images_directory/' ~ article.image) }}" class="card-img-top" alt="..."></a>
						<div class="card-body">
							<h5 class="card-title">{{article.nom}}</h5>
							<p class="card-text">{{article.couleur}}</p>
							<a href="/article/{{article.id}}" class="btn btn-outline-info">voir l'article</a>
						</div>
					</div>
				{% endfor %}
			</div>
		</div>
	</div>

{% endblock %}

