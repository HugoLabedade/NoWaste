{% extends 'base.html.twig' %}

{% block title %}Hello CategoriesController!
{% endblock %}

{% block body %}
	<div class="row">
		{% for article in articles %}
			<div class="col-md-4">
				<div class="card">
					<a href="/article/{{article.id}}">
						<img src="{{ asset('images_directory/' ~ article.image) }}" class="card-img-top" alt="..."></a>
					<div class="card-body">
						<h5 class="card-title">{{article.nom}}</h5>
						<p class="card-text">{{article.couleur}}</p>
						<a href="/article/{{article.id}}" class="btn btn-primary">voir l'article</a>
					</div>
				</div>
			</div>
		{% endfor %}
    </div>
	{% endblock %}
