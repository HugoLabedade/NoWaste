{% extends 'base.html.twig' %}

{% block title %}Hello CartController!
{% endblock %}

{% block body %}
	<h1>Votre panier</h1>
	{% if produits | length > 0 %}
		<table class="table">
			<thead>
				<th>Article</th>
				<th>Couleur</th>
				<th>Quantité</th>
				<th>Prix</th>
				<th>Total</th>
				<th></th>
			</thead>
			<tbody>
				{% for produit in produits %}
					<tr>
						<td>{{produit.article.nom}}</td>
						<td>{{produit.article.couleur}}</td>
						<td>{{produit.Quantité}}</td>
						<td>{{produit.article.prix * produit.Quantité}}</td>
						<td>
							<a href="{{path('cart_remove', {'id':produit.article.id})}}" class="btn btn-danger btn-sm">
								<i class="fas fa-trash"></i>
							</a>
						</td>
					</tr>
				{% endfor %}
			</tbody>
			<tfoot>
				<tr>
					<td colspan="3" class="text-right">Total :
					</td>
					<td>{{ total }}</td>
					<td></td>
				</tr>
			</tfoot>
		</table>
		<a href="{{ path('cart_edit')}}">Commander</a>
	{% else %}
		<p>Votre panier est vide</p>
	{% endif %}
{% endblock %}
