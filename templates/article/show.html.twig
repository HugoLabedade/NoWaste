{% extends 'base.html.twig' %}

{% block title %}Post
{% endblock %}

{% block body %}
	<h1>Article</h1>

	<table class="table">
		<tbody>
			<tr>
				<td>{{ article.nom }}</td>
			</tr>
			<tr>
				<td>
					<img src="{{ asset('images_directory/' ~ article.image) }}">
				</td>

			</tr>

			<tr>
				<th>Couleur</th>
				<td>{{ article.couleur }}</td>
			</tr>
			<tr>
				<th>Stock</th>
				<td>{{ article.stock }}</td>
			</tr>
			<tr>
				<th>Taille</th>
				<td>{{ article.taille }}</td>
			</tr>
			<tr>
				<th>Prix</th>
				<td>{{ article.prix }}â‚¬</td>
			</tr>

		</tbody>
	</table>

	<a href="{{ path('tout_debut') }}">Retour</a>

	<a href="{{ path('cart_add', {'id': article.id})}}">Ajouter au panier</a>
{% endblock %}
