{% extends 'base.html.twig' %}

{% block title %}Post
{% endblock %}

{% block body %}
	<h1>Article</h1>

	<table class="table">
		<tbody>
			<tr>
				<td>{{ article.nom }}</td>
			</tr>
			<tr>
				<td>
					<img src="{{ asset('images_directory/' ~ article.image) }}">
				</td>

			</tr>

			<tr>
				<th>Couleur</th>
				<td>{{ article.couleur }}</td>
			</tr>
			<tr>
				<th>Stock</th>
				<td>{{ article.stock }}</td>
			</tr>
			<tr>
				<th>Taille</th>
				<td>{{ article.taille }}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('accueil') }}">Retour</a>
{% endblock %}
